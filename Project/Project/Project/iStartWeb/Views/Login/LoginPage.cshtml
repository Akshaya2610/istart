<html>
<head>
    @{
        ViewBag.Title = "LoginPage";
    }

    @*<h2>LoginPage</h2>*@
    </head>
<body>
    <section>
        <div>
            <div class="col-md-6 col-sm-12 col-xs-12">
                <div>
                    <h3>Sign In With</h3><br>
                    <div class="input-container">
                        <input type="email" class="form-control" placeholder="User Name" id="txtloginusername">
                        <i class="fa fa-envelope login-icons" aria-hidden="true"></i>
                        <p id="Ptxtusername"></p>
                    </div>
                    <div class="input-container">
                        <input type="password" class="form-control" placeholder="Password" id="txtloginPassword">
                        <i class="fa fa-eye login-icons" id="togglePasswordLogin" aria-hidden="true"></i>
                        <p id="PtxtPassword"></p>
                    </div>
                    <div class="checkbox">
                        <label><input type="checkbox" class="loginchbox" value=""><span class="text-black">Remember Me</span></label>
                        <a href="/ForgotPassword" class="pull-right">Forgot Password ?</a>
                    </div>
                    <div class="row">
                        <!-- /.col -->
                        <div class="col-xs-12">
                            <button type="button" class="btn btn-block btn-flat btn-primaryuse login-btn btn-md" name="SignIn" id="btnSignIn">Login</button>
                        </div>
                        <!-- /.col -->
                    </div>
                    <label><span class="text-black">Don't Have An Account?</span> <a href="/Login/RegisterPage" target="_blank">Register</a></label>
                    @*<a href="/Register" class="pull-left"><span class="text-black">Don't Have An Account?</span> Register</a>*@
                    <input type="hidden" id="fcm_token">
                    <p id="PbtnSignIn" style="color:limegreen; font-size:16px; font-weight:700"></p>
                    <p id="PPbtnSignIn" style="color:red; font-size:16px; font-weight:700"></p>
                </div>
            </div>
            </div>
</section>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="~/Content/js/Login.js"></script>
    <!-- Toastr CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script>
        const togglePassword = document.querySelector('#togglePasswordLogin');
        const passwordField = document.querySelector('#txtloginPassword');

        togglePassword.addEventListener('click', function () {
       
            const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordField.setAttribute('type', type);

         
            this.classList.toggle('fa-eye-slash');
        });
    </script>
    <style>
        .input-container {
            position: relative;
            width: 100%;
            margin-bottom: 15px;
        }
        
        .form-control {
            width: 100%;
            padding: 10px;
            padding-right: 40px; /* Ensure space for the icon */
            box-sizing: border-box;
            font-size: 16px;
        }
        
        .login-icons {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #999;
        }
        
        #Ptxtusername,
        #PtxtPassword {
            color: red;
        }
    </style>

</body>
</html>
